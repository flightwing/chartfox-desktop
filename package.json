{
  "name": "chartfox-desktop",
  "description": "Chartfox desktop app",
  "author": {
    "name": "flightwing"
  },
  "version": "0.1.0",
  "main": "main.js",
  "build": {
    "appId": "com.flightwing.chartfox-desktop",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "flightwing",
        "repo": "chartfox-desktop"
      }
    ]
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12"
  }
}